       android:textSize="30dp"
       android:textColor="#27819C"/>

    <TextView
        android:text="About"
        android:textSize="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#27819C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Contact"
        android:textSize="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#27819C"
        android:layout_width="wrap_content"
